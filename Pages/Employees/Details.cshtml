@page
@model DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Employee</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.cpf)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.cpf)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.dateBirth)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.dateBirth)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.paycheck)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.paycheck)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.payment)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.payment)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.Gender)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.Gender)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.Area)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.Area.name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.Dependents)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Nome</th>
                    <th>CPF</th>
                    <th>Data de Nascimento</th>
                    <th>Gênero</th>
                </tr>
                @foreach (var item in Model.Employee.Dependents)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.name)</td>
                        <td>@Html.DisplayFor(modelItem => item.cpf)</td>
                        <td>@Html.DisplayFor(modelItem => item.dateBirth)</td>
                        <td>@Html.DisplayFor(modelItem => item.Gender)</td>
                        <td>
                            <a asp-page="../Dependents/Edit" asp-route-id="@item.ID">Edit</a> |
                            <a asp-page="../Dependents/Details" asp-route-id="@item.ID">Details</a> |
                            <a asp-page="../Dependents/Delete" asp-route-id="@item.ID">Delete</a>
                        </td>
                    </tr>
                }

            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Employee.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
