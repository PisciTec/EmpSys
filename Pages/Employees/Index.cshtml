@page
@model IndexModel

@{
    ViewData["Title"] = "Funcionários";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Criar novo Funcionário</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Employees[0].name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees[0].cpf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees[0].dateBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees[0].paycheck)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees[0].payment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees[0].Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees[0].Area)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Employees) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cpf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dateBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.paycheck)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.payment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Area.name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                <a asp-page="./Index" asp-route-payment="pagamento" asp-route-id="@item.ID">Pagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
