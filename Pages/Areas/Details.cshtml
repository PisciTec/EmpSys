@page
@model EmpSys.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Area</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Area.name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Area.name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Area.Employees)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Nome</th>
                    <th>CPF</th>
                    <th>Data de Nascimento</th>
                    <th>Salário</th>
                    <th>Gênero</th>
                    <th>Pagto Realizado</th>
                </tr>
                @foreach (var item in Model.Area.Employees)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.name)</td>
                        <td>@Html.DisplayFor(modelItem => item.cpf)</td>
                        <td>@Html.DisplayFor(modelItem => item.dateBirth)</td>
                        <td>@Html.DisplayFor(modelItem => item.paycheck)</td>
                        <td>@Html.DisplayFor(modelItem => item.Gender)</td>
                        <td>@Html.DisplayFor(modelItem => item.payment)</td>
                    </tr>
}
                
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Area.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
